%mode push
%mode string QQQ "`" "`" "\\"
%define impl_deserialize `
ROUTINE deserialize
  BEGIN
    --copy attributes into user defined struct
    fileAttr(attribPntrs[1])
    nde.coords = (data.vec)
    fileAttr(attribPntrs[2])
    nde.polygon = (data.int)
