%define impl_attrs `
ROUTINE createAttr
  BEGIN
    --coordinate
    attribPntrs[1] = new_attr_pntr(1, 1, '', '', ',', C_VEC2D)
    --polygon
    attribPntrs[2] = new_attr_pntr(3, 1, '', '', ',', C_INT)
  END createAttr
